@inject Microsoft.Extensions.Configuration.IConfiguration configuration

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EuroJudo WebContestSheets</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-light bg-light">
        <div class="container-fluid">
            <!--<a asp-area="" asp-controller="Tournaments" asp-action="Index" class="navbar-brand">EuroJudoWebContestSheets</a>-->
            <a asp-area="" asp-controller="ContestOrder" asp-action="Index" class="navbar-brand">EuroJudo
                WebContestSheets</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <!--<li><a asp-area="" asp-controller="Tournaments" asp-action="Index">Tournaments</a></li>-->
                    <li class="nav-item"><a asp-area="" asp-controller="ContestOrder" asp-action="Index"
                            class="nav-link">Contest Order</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <partial name="_alpha_banner" />

    <div class="container body-content">
        @RenderBody()
    </div>

    <div class="container-fluid">
        <hr />
        <footer>
            <environment include="Development">
                <p>&copy; 2018 - 2022 - Bas Janssen - <a href="#attributionModal" data-bs-toggle="modal"
                        data-bs-target="#attributionModal">Attribution</a> - Served by [@configuration["POD_NAME"]] on
                    host
                    [@configuration["NODE_NAME"]]</p>
            </environment>
            <environment include="Production">
                <p>&copy; 2018 - 2022 - Bas Janssen - <a href="#attributionModal" data-bs-toggle="modal"
                        data-bs-target="#attributionModal">Attribution</a></p>
            </environment>
        </footer>
    </div>

    <partial name="_attribution" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)

</body>

</html>
