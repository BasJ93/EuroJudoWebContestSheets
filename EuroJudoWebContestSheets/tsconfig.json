{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": true,
    "outDir": "ClientApp/js",
    "jsx": "react"
  },
  "include": [
    "ClientApp/*.ts"
  ],
  "exclude": [
    "node_modules",
    "wwwroot",
    "out"
  ],
  "compileOnSave": true,
  "typeAcquisition": {
    "enable": true
  }
}